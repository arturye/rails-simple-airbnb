<%= simple_form_for(@flat, html: { class: "flat-form" }) do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
  </div>

  <div class="form-group">
    <%= f.input :address, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
  </div>

  <div class="form-group">
    <%= f.input :price_per_night, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
  </div>

  <div class="form-group">
    <%= f.input :number_of_guests, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
  </div>

  <div class="form-group">
    <%= f.input :image_url, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-submit" %>
    <%= link_to "Cancel", flats_path, class: "btn btn-cancel" %>
  </div>
<% end %>
